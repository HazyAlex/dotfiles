{
    // ------
    //  TODO
    // ------
    //
    // Custom buttons at the end of the tabs: https://marketplace.visualstudio.com/items?itemName=jerrygoyal.shortcut-menu-bar
    // Statistics on code usage: https://marketplace.visualstudio.com/items?itemName=softwaredotcom.swdc-vscode
    // Align code: https://marketplace.visualstudio.com/items?itemName=wwm.better-align
    // Gitlab: https://marketplace.visualstudio.com/items?itemName=GitLab.gitlab-workflow
    // Console log automatically: https://marketplace.visualstudio.com/items?itemName=ChakrounAnas.turbo-console-log
    //
    // ----------------------------
    //  Telemetry and Auto-updates
    // ----------------------------
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.enableExperiments": false,
    "extensions.autoUpdate": false,
    "extensions.autoCheckUpdates": false,
    "extensions.ignoreRecommendations": true,
    "update.mode": "manual",
    "update.showReleaseNotes": true,
    "telemetry.telemetryLevel": "off",
    "npm.fetchOnlinePackageInfo": false,
    "security.workspace.trust.untrustedFiles": "open",
    // ----------
    //  Terminal
    // ----------
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": [
                "-NoLogo"
            ]
        }
    },
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.shellIntegration.decorationsEnabled": "overviewRuler",
    "terminal.integrated.localEchoLatencyThreshold": -1,
    "terminal.integrated.scrollback": 2000,
    "terminal.integrated.showLinkHover": true,
    //
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.fontSize": 16,
    "terminal.fontFamily": "Fira Mono Retina",
    "terminal.integrated.fontFamily": "monospace",
    "terminal.integrated.fontWeight": "200",
    "terminal.integrated.fontWeightBold": "400",
    "terminal.integrated.tabs.enabled": false,
    // --------
    //  Window
    // --------
    "window.restoreWindows": "none",
    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}",
    // -----------
    //  Workbench
    // -----------
    "workbench.reduceMotion": "on",
    "workbench.panel.opensMaximized": "preserve",
    "workbench.startupEditor": "none",
    "workbench.editor.tabSizing": "shrink",
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.settings.editor": "json",
    "workbench.list.smoothScrolling": false,
    "workbench.sideBar.location": "right",
    "workbench.panel.defaultLocation": "right",
    "workbench.activityBar.visible": false,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.enablePreview": true,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.colorCustomizations": {
        "[Relaxed]": {
            "textLink.activeForeground": "#e06c75",
            "textLink.foreground": "#41a6d9"
        },
        "[Quiet Light]": {
            "statusBar.background": "#ede8ef",
            "statusBar.foreground": "#5e5e5e"
        },
        "[Snazzy Light]": {
            "statusBar.background": "#3a3a3a",
            "terminal.ansiBrightBlack": "#008f00",
            "terminal.ansiBrightYellow": "#cf9000",
            "terminal.ansiBrightGreen": "#444444"
        },
        "[Kary Pro Colors － Dark]": {
            "dropdown.background": "#202020",
            "statusBar.background": "#1A1A1A",
            "statusBar.foreground": "#CECECE",
            "statusBar.noFolderBackground": "#1A1A1A",
            "statusBar.noFolderForeground": "#CECECE",
            //"tab.activeBorder": "#1A1ABF",
            "editorCursor.background": "#1A1A1A",
            "terminal.background": "#1A1A1A",
            "menu.foreground": "#CECECE"
        },
        "[Kary Pro Colors － Light]": {
            "menu.background": "#F7F7F7",
            "statusBar.background": "#F7F7F7",
            "statusBar.foreground": "#000",
            "statusBar.noFolderBackground": "#F7F7F7",
            "statusBar.noFolderForeground": "#000",
            "editorCursor.foreground": "#313131",
            "terminal.background": "#F7F7F7",
            "terminalCursor.foreground": "#313131"
        },
        "[Detox]": {
            "statusBar.background": "#1a1a1a",
            "statusBar.foreground": "#300",
            "statusBar.noFolderBackground": "#1a1a1a",
            "statusBar.noFolderForeground": "#fff",
            "statusBarItem.remoteBackground": "#1a1a1a"
        }
    },
    "editor.tokenColorCustomizations": {
        "[Make Apps Theme]": {
            "comments": {
                "foreground": "#6C7A80",
                "fontStyle": ""
            }
        },
        "[Yi Light]": {
            "comments": "#be2020"
        },
        "[Tokyo Night Storm]": {
            "comments": "#b5dbe8"
        },
        "[Kary Pro Colors － Light]": {
            "comments": "#A7A4A2"
        }
    },
    // ----------
    //  Explorer
    // ----------
    "breadcrumbs.enabled": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.fileNesting.enabled": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "vendor": true,
        "**/dist": true,
        "**/target/**": true
    },
    "scm.alwaysShowRepositories": true,
    "search.quickOpen.history.filterSortOrder": "recency",
    "editor.definitionLinkOpensInPeek": false,
    // --------
    //  Editor
    // --------
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.multiCursorPaste": "spread",
    "editor.snippetSuggestions": "inline",
    "editor.suggestSelection": "first",
    "editor.suggest.insertMode": "insert",
    "editor.autoClosingDelete": "always",
    "editor.folding": true,
    "editor.scrollBeyondLastLine": true,
    "editor.codeLens": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.renderWhitespace": "trailing",
    "editor.lightbulb.enabled": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "Iosevka",
    "editor.fontSize": 18,
    "editor.fontLigatures": true,
    "editor.accessibilitySupport": "off",
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.bracketPairColorization.enabled": false,
    "editor.language.colorizedBracketPairs": [],
    "editor.guides.highlightActiveBracketPair": false,
    "editor.guides.bracketPairs": false,
    "editor.guides.indentation": false,
    "editor.suggest.preview": true,
    "editor.unicodeHighlight.ambiguousCharacters": true,
    // -----
    //  VIM
    // -----
    "editor.lineNumbers": "relative",
    "vim.cursorStylePerMode.insert": "line",
    "vim.foldfix": true,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(250, 250, 100, 0.3)",
    "vim.highlightedyank.duration": 280,
    "vim.useCtrlKeys": true,
    "vim.leader": "<space>",
    "vim.useSystemClipboard": false,
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "g",
                "y",
                "c"
            ],
            "commands": [
                "editor.action.copyLinesDownAction",
                "editor.action.commentLine",
                "cancelSelection",
                "extension.vim_escape",
                "extension.vim_down"
            ]
        }
    ],
    // -------------
    //  CustomizeUI
    // -------------
    "customizeUI.font.monospace": "Iosevka Regular",
    "customizeUI.font.regular": "Iosevka Regular",
    "customizeUI.fontSizeMap": {
        "13px": "16px",
        "monospace": "15px",
        "tab-title": "11px"
    },
    "customizeUI.stylesheet": {
        // Disable tabs
        // ".tabs": "display: none !important",
        // ".editor-container": "height: 1131px !important",
        // ".monaco-editor": "height: 1131px !important",
        // ".overflow-guard": "height: 1131px !important",
        // ".overflow-guard > div.monaco-scrollable-element.editor-scrollable.vs-dark": "height: 1131px !important",
        // ".sidebar > div.composite.title > div.title-label": "display: none !important",
        // ".vscode-custom-css": "display: none !important",
        //
        // Reduced size tabs
        ".tabs-container .tab": "height: 27px !important;",
        ".tabs": "height: 27px !important;",
        ".tab > .monaco-icon-label::before": "visibility: hidden !important;",
        //
        // Zen mode, but conflicts with the terminal:
        // ".title-actions .actions-container": "display: none !important;",
        ".actions-container .codicon-new-file": "display: none !important",
        ".actions-container .codicon-new-folder": "display: none !important",
        ".actions-container .codicon-collapse-all": "display: none !important",
        ".editor-actions": "display: none !important;"
    },
    // -------------------
    //  Project Dashboard
    // -------------------
    "dashboard.projectData": null,
    "dashboard.showAddProjectButtonTile": false,
    "dashboard.displayProjectPath": true,
    "dashboard.storeProjectsInSettings": false,
    "dashboard.openOnStartup": "empty workspace",
    // -----
    //  LSP
    // -----
    "errorLens.delay": 0,
    "errorLens.enabledDiagnosticLevels": [
        "warning",
        "info",
        "error"
    ],
    // -----
    //  C++
    // -----
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.codeFolding": "Disabled",
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.vcpkg.enabled": false,
    "C_Cpp.workspaceParsingPriority": "low",
    "C_Cpp.default.cppStandard": "c++20",
    "clang-format.fallbackStyle": "WebKit",
    // ------
    //  Rust
    // ------
    "rust-analyzer.completion.postfix.enable": true,
    "rust-analyzer.lens.enable": true,
    "rust-analyzer.lens.run": true,
    "rust-analyzer.notifications.cargoTomlNotFound": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    // ----------
    //  Web dev.
    // ----------
    "files.associations": {
        "*.json": "jsonc"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[vue]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "[javascript]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "[css]": {
        "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
    },
    "eslint.validate": [
        "javascript",
        "js",
        "vue",
        "typescript",
    ],
    "prettier.tabWidth": 4,
    "prettier.printWidth": 100,
    "prettier.jsxBracketSameLine": true,
    "prettier.arrowParens": "avoid",
    "volar.formatting.printWidth": 100,
    "eslint.format.enable": true,
    "vue3snippets.jsxBracketSameLine": false,
    "vetur.ignoreProjectWarning": true,
    "intelephense.environment.phpVersion": "8.1.0",
    "intelephense.diagnostics.undefinedMethods": false,
    "intelephense.diagnostics.undefinedFunctions": false,
    // -----------
    //  TODO Tree
    // -----------
    "todo-tree.regex.regex": "(//)\\s*($TAGS).*(\\r\\n\\s*//\\s{2,}.*)*",
    // "todo-tree.regex.regex": "(/\\*)\\s*($TAGS).*(\\n\\s*(//|/\\*|\\*\\*)\\s{2,}.*)*",
    "todo-tree.ripgrep.ripgrepMaxBuffer": 1024,
    "todo-tree.highlights.highlightDelay": 0,
    "todo-tree.regex.regexCaseSensitive": false,
    "todo-tree.tree.scanMode": "open files",
    "todo-tree.filtering.includeHiddenFiles": true,
    "todo-tree.general.schemes": [
        "vscode-userdata",
        "file",
        "ssh",
        "untitled"
    ],
    // TODO: Read through all of the issues on the github -> look for 'nested' TODOs
    "todo-tree.general.tags": [
        "BUG:",
        "FIXME:",
        "TODO:",
        "@Performance",
        "@Internal",
        "@Measure",
        "@Debug",
        "@Note"
    ],
    "todo-tree.highlights.defaultHighlight": {
        "type": "tag-and-subTag",
        "foreground": "#9DE3C0",
        "borderRadius": "0px",
    },
    "todo-tree.highlights.customHighlight": {
        "@Internal": {
            "type": "tag-and-subTag",
            "foreground": "#d00",
            "background": "#ffffff00",
        },
        "TODO:": {
            "type": "text-and-comment",
            "foreground": "#ff0",
            "background": "#ffffff00",
        },
        "FIXME:": {
            "type": "text-and-comment",
            "foreground": "#ccc",
            "background": "#ff777788",
        }
    },
    // -----
    //  Git
    // -----
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "git.branchProtection": [
        "master",
        "staging",
        "develop",
    ],
    // ------------------
    //  Markdown / Notes
    // ------------------
    "pasteImage.path": "${currentFileDir}",
    "pasteImage.showFilePathConfirmInputBox": true,
    "markdown.preview.breaks": true,
    "markdown-preview-enhanced.codeBlockTheme": "github.css",
    "markdown-preview-enhanced.usePandocParser": true,
    "markdown-preview-enhanced.breakOnSingleNewLine": true,
    "[plaintext]": {
        "editor.wordWrap": "on",
        "editor.lineNumbers": "off",
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.lineNumbers": "off",
        "editor.overviewRulerBorder": false,
        "editor.lineHeight": 28,
        "editor.wrappingIndent": "indent",
        "workbench.editor.languageDetection": false,
    },
    "[org]": {
        "editor.wordWrap": "on",
        "editor.lineNumbers": "off"
    },
    "autofold.types": [
        {
            "ext": "org",
            "level": 1
        }
    ],
    // ---------
    //  Preview
    // ---------
    "editor.cursorSmoothCaretAnimation": false, // TODO: Too slow.
    "editor.experimental.stickyScroll.enabled": true,
    "implicitParentheses.enable": true, // TODO: Really slow on compiled files.
    // ------
    //  Misc
    // ------
    "cSpell.userWords": [
        "aeternum",
        "autofold",
        "axios",
        "codicon",
        "datatable",
        "Fira",
        "foldfix",
        "highlightedyank",
        "intelephense",
        "Iosevka",
        "Kary",
        "Keizaal",
        "OLED",
        "Parens",
        "pinia",
        "rgba",
        "ripgrep",
        "scrollback",
        "stylesheet",
        "userdata",
        "vcpkg",
        "vetur",
        "vuetify"
    ],
    "vscode_custom_css.imports": [
        "file:///C:/Users/Alex/.vscode/custom.css"
    ],
    "vscode_custom_css.statusbar": false,
    "workbench.colorTheme": "Keizaal",
    "workbench.iconTheme": "ayu",
}